set -e

THIS_PACKAGE=twm
THIS_SCRIPT=postrm

#INCLUDE_SHELL_LIB#

#DEBHELPER#

if [ "$1" = "purge" ]; then
  if [ -d /etc/X11/twm ]; then
    rm -r /etc/X11/twm
  fi
fi

exit 0

