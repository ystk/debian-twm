THIS_PACKAGE=twm
THIS_SCRIPT=postinst

#INCLUDE_SHELL_LIB#

#DEBHELPER#

update-alternatives --install /usr/bin/x-window-manager x-window-manager \
  /usr/bin/twm 40 --slave /usr/share/man/man1/x-window-manager.1.gz \
  x-window-manager.1.gz /usr/share/man/man1/twm.1.gz

exit 0

